        /* 主舞台 (85%) */
        #stage { display: flex; height: 85vh; width: 100vw; position: relative; }

        .player-area {
            flex: 1; position: relative; border-right: 2px solid #ccc;
            display: flex; flex-direction: column; justify-content: flex-end; /* 內容靠下 */
        }

        /* 統計資訊區 */
        .stats-bar {
            position: absolute; top: 10px; width: 100%; text-align: center;
            font-size: 1.4rem; color: #555; font-weight: bold;
        }

        /* 直式表格 (放在最底端) */
        .math-wrapper {
            display: flex; justify-content: center; align-items: flex-end;
            margin-bottom: 20px; /* 留一點點邊距防止切到 */
            transition: opacity 0.3s;
        }
        .math-table { border-collapse: collapse; font-size: 3.2rem; font-family: 'Consolas', monospace; }
        .math-table td { width: 70px; height: 75px; text-align: center; vertical-align: bottom; }
        .border-bottom { border-bottom: 5px solid #000 !important; }

        .drop-zone {
            width: 60px; height: 65px; background: #fff; border: 2px dashed #999;
            border-radius: 10px; display: flex; justify-content: center; align-items: center; margin: 0 auto;
        }
        .drop-zone.filled { border: 3px solid var(--primary); background: #eef7ff; color: var(--primary); font-weight: bold; }

        /* 左右兩側數字池 */
        .side-pool {
            position: absolute; bottom: 20px; width: 140px; 
            display: flex; flex-wrap: wrap; gap: 10px; justify-content: center;
            background: rgba(255,255,255,0.3); padding: 10px; border-radius: 20px;
        }
